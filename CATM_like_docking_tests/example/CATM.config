#Configuration file for a typical CATM run
#To compile and run, from trunk:
#   -make bin/CATM_v24.5_test
#   -bin/CATM_v24.4_test --config config/CATM_test.config
# This particular protein example runs ~in 15 minutes
backboneCrd    69-gly-residue-helix.crd
topFile        top_all22_prot.inp
parFile        par_all22_prot.inp
hBondFile      par_hbond_CA.inp
rotLibFile     rotlib_combined_-60_-40.txt
monoRotLibFile rotlib_combined_-60_-40.txt
helixGeoFile   CENTROIDS_0.5_cutoff-6_byHbond
rulesFile      TMRULES_byHbond.txt
solvFile       solvpar22.inp
pdbOutputDir   

# This particular protein example runs ~in 15 minutes
uniprotAccession P06028_1
fullSequence RASLLLLILLCVLLGILLTILILIN

weight_vdw 1.0
weight_hbond 1.0
weight_solv 1.0
weight_elec 0.0

clusterSolutions true
rmsdCutoff 2.0
greedyOptimizer true
greedyCycles 3
printTermEnergies true
printAxes true
numberOfStructuresToMCRepack 1000
energyCutOff 50.0

startResNum 1
endResNum 21
tmStart 4
tmEnd 21
threadStart 16
threadEnd 34

#Options for backbone movement
deltaZ         0.5
deltaAx        2.5
deltaCross     2.5
deltaX         0.5
MCCycles          200
MCMaxRejects        5
MCStartTemp      1000
MCEndTemp         0.5
MCCurve             3

deleteTerminalBonds true
deleteTerminalInteractions CHARMM_ELEC
deleteTerminalInteractions SCWRL4_HBOND

hbondCheckNumber 4
onlySaveNegativeStructures true
